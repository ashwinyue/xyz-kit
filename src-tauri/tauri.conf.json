{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xyz-kit",
  "version": "1.0.0",
  "identifier": "com.xyz-kit.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "xyz-kit",
        "width": 680,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "category": "DeveloperTool",
    "shortDescription": "Text processing toolkit",
    "longDescription": "A lightweight text processing tool for developers"
  }
}
